<Window x:Class="BOMJ_Simulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BOMJ_Simulator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF0C00FF">
    <Grid Margin="0,0,0,1">
        <TextBlock Text="Симулятор карьеры дворника" FontSize="30" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>
        <Button x:Name="btStartGame" Content="Начать игру" Grid.Row="2"
                Margin="10" Click="BtStartGame_Click" 
                Background="#FF8B00FF" BorderBrush="Black"/>
        <Button x:Name="btExitGame" Content="Выход из игры" Grid.Row="3"
                Margin="10" Click="BtExitGame_Click" 
                Background="#FF8B00FF" BorderBrush="Black"/>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="200" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
    </Grid>
</Window>