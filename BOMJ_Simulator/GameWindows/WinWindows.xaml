<Window x:Class="BOMJ_Simulator.GameWindows.WinWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BOMJ_Simulator.GameWindows"
        mc:Ignorable="d"
        Title="WinWindows" Height="450" Width="800" BorderBrush="#FF0C00FF" Background="#FF0C00FF">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Text="Вы победили!" FontSize="20" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="250, 10" Grid.Row="0" />
        <Button x:Name="btRestartGame" Content="Начать заново"
                Height="50" Margin="250, 10" Grid.Row="1" 
                Click="BtRestartGame_Click" Background="#FF8B00FF" BorderBrush="Black" />
        <Button x:Name="btEndGame" Content="Выйти в главное меню"
                Height="50" Margin="250, 10" Grid.Row="2" 
                Click="BtEndGame_Click" Background="#FF8B00FF" BorderBrush="Black" />
    </Grid>
</Window>
