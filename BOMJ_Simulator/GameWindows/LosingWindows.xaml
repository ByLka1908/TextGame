<Window x:Class="BOMJ_Simulator.GameWindows.LosingWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BOMJ_Simulator.GameWindows"
        mc:Ignorable="d"
        Title="LosingWindows" Height="450" Width="800">
    <Grid Background="#FF0C00FF">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Text="Вы проиграли!" FontSize="20" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   Margin="328,41,328,39" Grid.Row="0" Background="#FF0C00FF" Height="25" />
        <Button x:Name="btnRestartGame" Content="Начать заново" 
                Height="50" Margin="250, 10" Grid.Row="1" 
                Click="BtnRestartGame_Click" Background="#FF8B00FF" BorderBrush="Black" />
        <Button x:Name="btnEndGame" Content="Выйти в главное меню" 
                Height="50" Margin="250, 10" Grid.Row="2" 
                Click="BtnEndGame_Click" Background="#FF8B00FF" BorderBrush="Black" />
    </Grid>
</Window>
